<h1>Listing slide_items</h1>

<table class="table table-striped">
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Slideimg</th>
    <th>操作</th>
  </tr>

  <% @slide_items.each do |slide_item| %>
  <tr>
    <td><%= slide_item.title %></td>
    <td><%= link_to slide_item_path(slide_item) , slide_item %></td>
    <td>

      <a  class="thumbnail">
        <img data-src="holder.js/160x120" alt="160x120" style="width: 160px; height: 120px; " <%= raw img_src(slide_item.slideimg) %> >
      </a>
    </td>

    <td>
      <%= link_to 'Show', slide_item %>
      <%= link_to 'Edit', edit_slide_item_path(slide_item) %>
      <%= link_to 'Destroy', slide_item, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
  <% end %>
</table>

<br />

<%= link_to 'New Slide item', new_slide_item_path %>
